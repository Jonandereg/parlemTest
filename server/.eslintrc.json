{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": ["error", 2],
    "keyword-spacing": "error",
    "linebreak-style": ["error", "unix"],
    "no-undef": 0,
    "no-unused-vars": 0,
    "quotes": ["error", "single"],
    "no-console": "error",
    "semi": ["error", "always"],
    "space-before-blocks": "error",
    "space-before-function-paren": "error",
    "max-len": ["error", { "code": 200 }]
  }
}
