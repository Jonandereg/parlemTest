{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
    "indent": ["error", 2],
    "keyword-spacing": "error",
    "linebreak-style": ["error", "unix"],
    "no-undef": 0,
    "no-unused-vars": 0,
    "quotes": ["error", "single"],
    "no-console": "error",
    "semi": ["error", "always"],
    "space-before-blocks": "error",
    "space-before-function-paren": "error",
    "max-len": ["error", { "code": 200 }]
    }
}
